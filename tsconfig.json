{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "navigation/*": ["navigation/*"],
      "screens/*": ["screens/*"],
      "components/*": ["./components/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"],
      "locales/*": ["locales/*"],
      "constant/*": ["constant/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.spec.ts",
    ".eslintrc.js",
  ],
  "types": [
    "typePatches"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
        // "tsConfigFile": "my-tsconfig.json"
      }
    }
  },
}
